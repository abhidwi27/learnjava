package array;

public class ReaaragneOddEven {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int a[] = {1, 2, 3, 4, 5, 6, 7};
		
		for( int i = 2; i< a.length; i++){
			if(i%2 == 0){
				while(a[i-2] < a[i] && i > 0){
					int temp = a[i-2];
					a[i-2] = a[i];
					a[i] = temp;
				}
			}else{
				while(a[i-2] > a[i] && i > 1){
					int temp = a[i-2];
					a[i-2] = a[i];
					a[i] = temp;
				}
			}
			
		}
		ArrayPrint.printArray(a);

	}

}
