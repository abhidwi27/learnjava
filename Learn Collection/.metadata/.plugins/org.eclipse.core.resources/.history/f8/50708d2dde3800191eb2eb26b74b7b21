package array;

public class ReaaragneOddEven {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int a[] = {1, 2, 3, 4, 5, 6, 7};
		int j, temp, minElement, minelementIdx, maxElement, maxElementIdx;
		for( int i = 1; i< a.length; i++){
			j = i;
			while( j > 0 ){
			
				if(i%2 == 0){			
						if(a[j] < a[j-1]){
							temp = a[j-1];
							a[j-2] = a[j];
							a[j] = temp;
							
						}
					
				}else{
					
					if(a[j] > a[j-1]){
						temp = a[j-1];
						a[j-2] = a[j];
						a[j] = temp;
						
					}
					
				
				}
				
				j--;
			}
		}
		ArrayPrint.printArray(a);

	}

}
