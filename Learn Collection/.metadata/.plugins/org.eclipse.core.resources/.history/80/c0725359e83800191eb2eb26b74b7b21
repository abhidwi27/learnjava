package array;

public class ReaaragneOddEven {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int a[] = {1, 2, 3, 4, 5, 6, 7};
		int j, temp,  minElementIdx, maxElementIdx;
		
		
		minElementIdx = 0;
		
		maxElementIdx = 0;
		for( int i = 1; i< a.length; i++){
			j = i;
			while( j >= 0 ){
			
				if(j%2 == 0){
					if(j > maxElementIdx){
						if( a[j] < a[maxElementIdx] && j > maxElementIdx){
							if(a[j] < a[minElementIdx]){
								minElementIdx = maxElementIdx;
							}
							temp = a[maxElementIdx];
							a[maxElementIdx] = a[j];
							maxElementIdx = j;
							a[j] = temp;
													
							
						}else{
							
								maxElementIdx = j;
							}
					}else{
						maxElementIdx = j-2;
						minElementIdx = j-1;
					}
				}
					
				else{
					if(j > minElementIdx){
					  if(a[j] > a[minElementIdx] && j > minElementIdx){
						  if( a[j] > a[maxElementIdx]){
						  		maxElementIdx = minElementIdx;
						  }
						  temp = a[minElementIdx];						  	
						  a[minElementIdx] = a[j];
						  minElementIdx = j;
						  a[j] = temp;
						  
						  
					  }else{
						  minElementIdx = j;
					  }
					}else{
						maxElementIdx = j-1;
						minElementIdx = j-2;
					}
					
				
				}
				
				j--;
			}
		}
		ArrayPrint.printArray(a);

	}

}
