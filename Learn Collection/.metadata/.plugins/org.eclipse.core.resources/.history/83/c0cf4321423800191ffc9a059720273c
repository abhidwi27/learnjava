package array;

public class ReaaragneOddEven {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int a[] = {1, 2, 3, 4, 5, 6, 7};
		int j;
		for( int i = 1; i< a.length; i++){
			j = i;
			if(i%2 == 0){
				
				while(j > 0 && a[j-1] > a[j] ){
					int temp = a[j-1];
					a[j-1] = a[j];
					a[j] = temp;
					j = j-1;
				}
			}else{
				while( j > 0 && a[j-1] < a[j]){
					int temp = a[j-1];
					a[j-1] = a[j];
					a[j] = temp;
					j = j-1;
				}
			}
			
		}
		ArrayPrint.printArray(a);

	}

}
